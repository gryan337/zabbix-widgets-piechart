{
	"manifest_version": 2.0,
	"id": "piechart-rme",
	"type": "widget",
	"name": "RME Pie chart",
	"namespace": "RMEPieChart",
	"version": "1.0",
	"author": "RME",
	"description": "Displays item values as a pie or doughnut chart.",
	"widget": {
		"size": {
			"width": 24,
			"height": 5
		},
		"js_class": "CWidgetPieChartRME",
		"in": {
			"time_period": {
				"type": "_timeperiod"
			}
		}
	},
	"actions": {
		"widget.piechart-rme.view": {
			"class": "WidgetView"
		}
	},
	"assets": {
		"js": ["class.svgpie.js", "class.widget.js"],
		"css": ["widget.css"]
	}
}
